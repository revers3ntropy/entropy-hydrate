{
  "name": "hydrate-web",
  "version": "0.0.11",
  "description": "Very lightweight web framework",
  "main": "index.js",
  "type": "module",
  "types": "index.d.ts",
  "scripts": {
    "setup": "npm i; npm install dts-bundle -g; npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack; npm run build:types; npm run build:styles",
    "build:types": "dts-bundle --baseDir . --name hydrate-web --main src/index.d.ts --out ./index.d.ts; rm -rf ./src/*.d.ts",
    "build:styles": "lessc -clean-css index.less index.css"
  },
  "author": "revers3ntropy",
  "devDependencies": {
    "css-minify": "^2.0.0",
    "dts-bundle": "^0.1.1",
    "less": "^4.1.3",
    "less-plugin-clean-css": "^1.5.1",
    "ts-loader": "^9.3.1",
    "webpack-cli": "^4.10.0",
    "webpack-shell-plugin-next": "^2.2.2"
  },
  "files": [
    "index.js",
    "index.js.map",
    "index.d.ts",
    "index.css"
  ]
}
